    <!-- Title -->
    <title>Login | BABA BHUSANDESHWAR</title>

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="../../../admin-p/assets/img/apple-touch-icon.png">

    <!-- Favicon -->
    <link rel="icon" href="../../../website/assets/img/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" type="image/x-icon" href="../../../website/assets/img/favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../../admin-p/assets/css/bootstrap.min.css">

    <!-- Tabler Icon CSS -->
    <link rel="stylesheet" href="../../admin-p/assets/plugins/tabler-icons/tabler-icons.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="../../admin-p/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="../../admin-p/assets/plugins/fontawesome/css/all.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="../../admin-p/assets/css/style.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css"/>
</head>

<body class="account-page">

    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <div class="account-content">
            <div class="d-flex flex-wrap w-100 vh-100 overflow-hidden account-bg-01">
                <div
                    class="d-flex align-items-center justify-content-center flex-wrap vh-100 overflow-auto p-4 w-50 bg-backdrop">
                    <form action="admin_login_submit" method="post" id="formSubmitlogin" autocomplete="off" class="flex-fill">
                        <!-- @csrf -->
                        <div class="mx-auto mw-450">
                            <div class="text-center mb-4">
                               <img src="../../../website/assets/img/favicon.png" class="img-fluid" alt="Logo">

                                <h4 class="mb-2 fs-20"> Admin Panel</h4>
                            </div>
                            <div class="mb-4">
                                <h4 class="mb-2 fs-20">Sign In</h4>
                                <p>Access the Admin panel using your email and password.</p>
                            </div>
                            <div class="mb-3">
                                <label class="col-form-label">Email Address</label>
                                <div class="position-relative">
                                    <span class="input-icon-addon">
                                        <i class="ti ti-mail"></i>
                                    </span>
                                    <input type="email" name="email" value="" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="col-form-label">Password</label>
                                <div class="pass-group">
                                    <input type="password" name="password" value=""  class="pass-input form-control">
                                    <span class="ti toggle-password ti-eye-off"></span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div class="form-check form-check-md d-flex align-items-center">
                                    <input class="form-check-input" type="checkbox" value="" id="checkebox-md"
                                        checked="">
                                    <label class="form-check-label" for="checkebox-md">
                                        Remember Me
                                    </label>
                                </div>
                                <div class="text-end">
                                    <a href="" class="text-primary fw-medium link-hover">Forgot
                                        Password?</a>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary w-100 loderButton"><span class="spinner-grow spinner-grow-sm loderIcon" role="status" aria-hidden="true" style="display: none;"></span>Sign In</button>
                            </div>

                            <div class="text-center">
                                <!-- <p class="fw-medium text-gray">Copyright &copy; {{ now()->year }} -  BABA BHUSANDESHWAR</p> -->
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- /Main Wrapper -->

    <!-- jQuery -->
    <script src="../../admin-p/assets/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="../../admin-p/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Icon JS -->
    <script src="../../admin-p/assets/js/feather.min.js"></script>

    <!-- Slimscroll JS -->
    <script src="../../admin-p/assets/js/jquery.slimscroll.min.js"></script>

    <!-- Custom JS -->
     
    <script src="../../admin-p/assets/js/script.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
     $(document).on('submit', 'form#formSubmitlogin', function(e) {

		e.preventDefault();
		var data = new FormData(this);
		$('.loderIcon').show();
		$('.loderButton').prop("disabled", true);
		$.ajax({
			cache: false,
			contentType: false,
			processData: false,
			url: $(this).attr("action"),
			method: $(this).attr("method"),
			dataType: "json",
			data: data,
			beforeSend: function(){
				$('.preloader').show();
			},
			complete: function(){
				$('.preloader').hide();
			},
			success: function(response)
			{
				$('.loderIcon').hide();
				$('.loderButton').prop("disabled", false);
				if (response.responseCode == 200) {
					toastr.success(response.responseMessage);
					if(response.responseUrl)
					{
                      location.href = response.responseUrl;
					}else{
					  location.reload();
					}

				} else {
					toastr.error(response.responseMessage);
				}
			}
		});
});
    </script>
</body>

</html>
