<script>
  const heroCarousel = document.querySelector('#hero-carousel');
  let isDown = false;
  let startX;
  let scrollLeft;
  // Start dragging
  heroCarousel.addEventListener('mousedown', (e) => {
    isDown = true;
    heroCarousel.classList.add('dragging');
    startX = e.pageX - heroCarousel.offsetLeft;
    scrollLeft = heroCarousel.scrollLeft;
  });
  // Stop dragging
  heroCarousel.addEventListener('mouseleave', () => {
    isDown = false;
    heroCarousel.classList.remove('dragging');
  });
  heroCarousel.addEventListener('mouseup', () => {
    isDown = false;
    heroCarousel.classList.remove('dragging');
  });
  // Mouse move event for dragging
  heroCarousel.addEventListener('mousemove', (e) => {
    if (!isDown) return; // Stop the function from running
    e.preventDefault();
    const x = e.pageX - heroCarousel.offsetLeft;
    const walk = (x - startX) * 2; // Scroll-fast
    heroCarousel.scrollLeft = scrollLeft - walk;
  });
  // Touch support for mobile devices
  heroCarousel.addEventListener('touchstart', (e) => {
    isDown = true;
    startX = e.touches[0].pageX - heroCarousel.offsetLeft;
    scrollLeft = heroCarousel.scrollLeft;
  });
  heroCarousel.addEventListener('touchend', () => {
    isDown = false;
  });
  heroCarousel.addEventListener('touchmove', (e) => {
    if (!isDown) return;
    e.preventDefault();
    const x = e.touches[0].pageX - heroCarousel.offsetLeft;
    const walk = (x - startX) * 2; // Scroll-fast
    heroCarousel.scrollLeft = scrollLeft - walk;
  });
</script>

