<script>
  $(document).ready(function() {
  $('.status').on('click', function() {
      var recordId = $(this).data('record-id');

      $.ajax({
          url: '/records1/' + recordId + '/status',
          type: 'PUT',
          headers: {
              'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content') // Include CSRF token in the headers
          },
          success: function(response) {
             console.log(response);
              if (response) {
                window.location.href = response.status;
              } else {
                  $(this).text('Activate').removeClass('btn-danger').addClass('btn-success');
              }
          },
          error: function(xhr) {
              console.log('Error status');
          }
      });
  });
});
</script>