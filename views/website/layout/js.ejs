<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Get all <p> elements within the class "event-text"
    var eventTextElements = document.querySelectorAll(".event-text p");
    // Loop through each text element
    eventTextElements.forEach(function(textElement) {
      // Get the full text
      var fullText = textElement.innerHTML;
      // Split the text into words
      var words = fullText.split(" ");
      // Prepare trimmed text and add "Read More" link
      var trimmedText = fullText; // Default to full text
      if (words.length > 100) {
        trimmedText = words.slice(0, 110).join(" ") + '...'; // Trim to 110 words if necessary
      }
      // Add the "Read More" link at the end
      trimmedText +=
        ' <a href="/shravan-month" style="color: #B80000; font-weight: 700; font-size: 12px ">Read More</a>'; // Change the href to your target page
      // Replace the paragraph text with the trimmed version
      textElement.innerHTML = trimmedText;
    });
  });
</script>
